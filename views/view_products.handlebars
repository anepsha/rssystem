<h2>Products</h2>
<p class="text-muted">Department: {{name}}</p>

{{#if products}}
    <table class="layout display responsive-table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th colspan="2">Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td class="organisationnumber">{{name}}</td>
                {{#if description}}
                <td class="organisationname">{{description}}</td>
                {{else}}
                <td class="organisationname">N/A</td>
                {{/if}}
                <td class="actions">
                    <a href="/cart_items/add_to_cart/{{_id}}" class="edit-item" title="Edit">Add to cart</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
{{/if}}
