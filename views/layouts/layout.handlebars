<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{{title}}</title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link href="/css/table.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

</head>
<body>
    <div class="container">

    <nav class="navbar  navbar-simple">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/departments/view_department">RSSystem</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav pull-right">
                    {{#if user}}
                    {{#if user.admin}}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Admin <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/departments/add_department">Departments List</a></li>
                            <li><a href="/products/add_product">Add Product</a></li>
                            <li><a href="/users/users_list">Users</a></li>
                        </ul>
                    </li>
                    {{/if}}
                    <li><a href="/departments/view_department">Departments</a></li>
                    <li role="presentation">
                      <a href="/cart_items/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        <span class="badge">{{session.cart.totalQty}}</span>
                      </a>
                    </li>
                    <li role="presentation"><a href="/users/logout">Logout</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

        {{#if success_msg}}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-success">{{success_msg}}</div>
            </div>
        </div>
        {{/if}}

        {{#if error_msg}}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger">{{error_msg}}</div>
            </div>
        </div>
        {{/if}}

        {{#if error}}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger">{{error}}</div>
            </div>
        </div>
        {{/if}}

        {{{body}}}
        {{#if info_msg}}
            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-info">{{info_msg}}</div>
                </div>
            </div>
        {{/if}}
    </div> <!-- /container -->


